<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="300dp"
    android:layout_marginTop="150dp"
    android:layout_marginBottom="10dp"
    android:layout_gravity="center"
    android:gravity="center_horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <Button
        android:id="@+id/first_3"
        android:layout_width="120dp"
        android:layout_height="120dp"

        android:textColor="#000"
        android:padding="15dp"
        android:drawableTop="@drawable/food2"
        android:layout_margin="10dp"
        android:layout_toEndOf="@+id/button1"
        android:background="@drawable/roundings"
        android:text="학식 물어보기"
        android:textSize="13dp" />

    <Button
        android:id="@+id/first_4"
        android:layout_width="120dp"
        android:textColor="#000"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:drawableTop="@drawable/site2"
        android:padding = "15dp"
        android:layout_margin="10dp"
        android:layout_toEndOf="@+id/first_3"
        android:background="@drawable/roundings"
        android:text="사이트 바로가기"
        android:textSize="13dp" />

    <Button
        android:id="@+id/first_7"
        android:layout_width="120dp"
        android:textColor="#000"
        android:layout_height="120dp"
        android:layout_below="@id/first_3"
        android:padding = "15dp"
        android:layout_margin="10dp"
        android:drawableTop="@drawable/help2"
        android:layout_toEndOf="@+id/button2"
        android:layout_toRightOf="@+id/button2"
        android:background="@drawable/roundings"
        android:text="자주 찾는 질문"
        android:textSize="13dp" />

    <Button
        android:id="@+id/first_8"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:textColor="#000"
        android:layout_below="@id/first_4"
        android:drawableTop="@drawable/chat2"
        android:layout_margin="10dp"
        android:padding="15dp"
        android:layout_toEndOf="@+id/first_7"
        android:background="@drawable/roundings"
        android:text="직접 대화하기"
        android:textSize="13dp" />



</RelativeLayout>